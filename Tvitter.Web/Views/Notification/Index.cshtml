@model IEnumerable<Notification>
@{
    ViewData["Title"] = "Notifications";
}

<div class="container mt-5">

    @foreach (var item in Model)
    {
        <div class=" mb-2">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-start w-100">
                        <p>
                            @if (item.Status != Tvitter.Core.Entity.Enum.Status.None)
                            {

                                <b>(New) </b>
                            }
                            @if (item.Type == Tvitter.Core.Entity.Enum.NotificationType.Login)
                            {
                                @item.Content
                            }
                            else
                            {
                                @item.Content <a href="/Tweet/@item.TweetId"> tweet</a>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }

</div>
