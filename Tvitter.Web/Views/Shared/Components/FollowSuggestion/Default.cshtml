@model IEnumerable<User>


<div class="card">
    <div class="card-body">
        <h3>Who to Follow</h3>
        <ul class="list-group">

            @foreach (var user in Model)
            {
                <li class="list-group-item">
                    <div class="d-flex flex-start w-100">
                        @if (user.ProfilePictureUrl != null)
                        {
                            <img class="rounded-circle shadow-1-strong mr-3"
                                 src="@Url.Content(user.ProfilePictureUrl)"
                                 alt="avatar"
                                 width="25"
                                 height="25" />
                        }
                        else
                        {
                            <img class="rounded-circle shadow-1-strong mr-3"
                                 src="https://st.depositphotos.com/1779253/5140/v/600/depositphotos_51405259-stock-illustration-male-avatar-profile-picture-use.jpg"
                                 alt="avatar"
                                 width="25"
                                 height="25" />
                        }

                        <div>
                            <p>
                                <a href="/@user.Username"><b>@user.Fullname</b></a><br />
                            </p>
                        </div>
                    </div>

                </li>
            }
        </ul>
    </div>
</div>