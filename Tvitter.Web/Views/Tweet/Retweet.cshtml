@model Tuple<User, Tweet>

@{
    ViewData["Title"] = "Retweet";
}
<section>
    <div class="container text-dark col-12 mx-auto mt-2">
        <div class="mx-auto">
            <div class="card">
                <div class="card-body p-3">
                    <div class="d-flex flex-start w-100">
                        @if (Model.Item1.ProfilePictureUrl != null)
                        {
                            <img class="rounded-circle shadow-1-strong mr-3"
                                 src="@Url.Content(Model.Item1.ProfilePictureUrl)"
                                 alt="avatar"
                                 width="65"
                                 height="65" />
                        }
                        else
                        {
                            <img class="rounded-circle shadow-1-strong mr-3"
                                 src="https://st.depositphotos.com/1779253/5140/v/600/depositphotos_51405259-stock-illustration-male-avatar-profile-picture-use.jpg"
                                 alt="avatar"
                                 width="65"
                                 height="65" />
                        }

                        <div class="w-100">
                            @{ ViewBag.TxtValue = Model.Item2.Text;}
                            @await Html.PartialAsync("PartialView/_PostTweet", Model.Item2)

                            <div class="mx-auto my-3">
                                <div id="view@(Model.Item2.ID.ToString())">
                                    <div class="container">
                                        <div class=" mb-2">
                                            <div class="card">
                                                <div class="card-body">
                                                    <div class="d-flex flex-start w-75">
                                                        @if (Model.Item2.User.ProfilePictureUrl != null)
                                                        {
                                                            <img class="rounded-circle shadow-1-strong mr-3"
                                                                 src="@Url.Content(Model.Item2.User.ProfilePictureUrl)"
                                                                 alt="avatar"
                                                                 width="45"
                                                                 height="45" />
                                                        }
                                                        else
                                                        {
                                                            <img class="rounded-circle shadow-1-strong mr-3"
                                                                 src="https://st.depositphotos.com/1779253/5140/v/600/depositphotos_51405259-stock-illustration-male-avatar-profile-picture-use.jpg"
                                                                 alt="avatar"
                                                                 width="45"
                                                                 height="45" />
                                                        }

                                                        <div>
                                                            <p>
                                                                <a href="/@Model.Item2.User.Username"><b>@Model.Item2.User.Fullname</b></a><br />
                                                                <span style="color:lightgray">
                                                                    @Html.Raw("@")@Model.Item2.User.Username @Model.Item2.CreatedDate
                                                                </span>
                                                            </p>
                                                        </div>
                                                    </div>

                                                    <div>
                                                        <p class="mt-2">@ViewBag.TxtValue</p>
                                                    </div>
                                                    @if (Model.Item2.MediaUrl != null)
                                                    {
                                                        <img src="@Url.Content(Model.Item2.MediaUrl)" alt="" class="card-img-bottom mb-2">

                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>



    </div>
</section>